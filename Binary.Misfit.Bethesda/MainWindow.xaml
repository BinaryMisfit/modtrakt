<Window x:Class="Binary.Misfit.Bethesda.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Binary.Misfit.Bethesda"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Canvas>
        <Label Name="directoryCount" Canvas.Left="10" Canvas.Top="10" />
        <Label Name="status" Canvas.Left="10" Canvas.Top="30" />
        <ScrollViewer Canvas.Left="15" Canvas.Top="60"
                      Height="300"
                      Width="Auto"
                      VerticalScrollBarVisibility="Auto">
            <TextBlock Name="modPath" />
        </ScrollViewer>
        <Button Width="100" Height="20" Canvas.Left="10" Canvas.Bottom="10">
            Action
            <Button.Click>ActionClick</Button.Click>
        </Button>
    </Canvas>
</Window>